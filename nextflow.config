process.cache = 'lenient'

nextflowVersion = '>=20.0'

import java.time.*
Date now = new Date()


params {
    day                = now.format("yyyMMdd")
    timestamp          = now.format("yyyyMMdd-HH-mm-ss")
    out                = "Analysis_Results-${day}"
    tracedir           = "${out}"
    debug              = false
}

profiles {

    standard { 
        params.gcp = false

        singularity {
            enabled = true
            autoMounts = true

            cacheDir = "/vast/eande106/singularity"
        }

        process {
            executor = 'slurm'
            queue = 'parallel'
            clusterOptions = '-A eande106 -t 8:00:00 -e errlog.txt'
            container = 'andersenlab/heritability-gls-base:latest'

            withLabel: medium {
                cpus = 4
            }

            withLabel: small {
                cpus = 1
            }

            withLabel: large {
                cpus = 6
            }

        }

        executor {
            queueSize = 500
            submitRateLimit = 5
        }

    }

    gcp { 
        params.gcp = true

        docker {
            enabled = true
        }

        process {
            executor = 'google-batch'
            container = 'andersenlab/heritability-gls-base:v0.01'

            withLabel: medium {
              machineType = 'n1-standard-4'
            }

            withLabel: small {
              machineType = 'n1-standard-1'
            }

            withLabel: large {
              machineType = "n1-highmem-2"

            } 
        }

        google {
            project = "${params.google_project}"
            location = "${params.google_zone}"
            batch {
                allowedLocations = ["regions/${params.google_zone}"]
                serviceAccountEmail = "${params.google_service_account_email}"
                debug = true
                preemptible = true
            }
        }

        workDir = "${params.work_dir}"
     }

}

report {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_report.html"
}

timeline {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_timeline.html"
}
