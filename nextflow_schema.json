{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
    "title": "calc_heritability-nf pipeline parameters",
    "description": "",
    "type": "object",
    "definitions": {
        "input_output": {
            "title": "Input/Output",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "out": {
                    "type": "string",
                    "default": "Heritability_Results",
                    "description": "Output directory name"
                },
                "vcf": {
                    "type": "string",
                    "default": "20220216",
                    "description": "CeNDR release date for the VCF file with variant data"
                },
                "species": {
                    "type": "string",
                    "enum": [
                        "c_elegans",
                        "c_briggsae",
                        "c_tropicalis"
                    ],
                    "default": "c_elegans"
                },
                "traitfile": {
                    "type": "string",
                    "description": "Full path to a file containing trait information"
                },
                "debug": {
                    "type": "boolean"
                }
            },
            "required": [
                "vcf",
                "species",
                "traitfile"
            ],
            "fa_icon": "fas fa-terminal"
        },
        "parameters": {
            "title": "Parameters",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "reps": {
                    "type": "number",
                    "default": 500,
                    "hidden": true
                },
                "fix": {
                    "type": "string",
                    "default": "fix",
                    "hidden": true
                },
                "maf": {
                    "type": "number",
                    "default": 0.05,
                    "hidden": true
                }
            },
            "fa_icon": "fas fa-balance-scale-right"
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output"
        },
        {
            "$ref": "#/definitions/parameters"
        }
    ]
}
